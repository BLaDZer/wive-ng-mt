#!/bin/sh

# if app not exist
if [ ! -e /bin/bndstrg ]; then
    exit 0
fi


# get params
. /etc/scripts/global.sh

LOG="logger -t bndstr"

start() {
    get_param
    if [ "$BandSteering" != "" ] && [ "$BandSteering" != "0" ] ; then
	if [ "$RadioOn" = "1" ] && [ "$RadioOnINIC" = "1" ] && [ "$SSID1" = "$SSID1INIC" ]; then
	    ( # send to background

	        # wait 5 seconds before start, prevent jam with RRM
		sleep 5

		# if need kill
		pid=`pidof bndstrg`
		if [ "$pid" != "" ]; then
		    $LOG "Stopping bandsteering daemon"
		    killall -q bndstrg
		    killall -q -SIGKILL bndstrg
		fi

		$LOG "Starting bandsteering daemon"
		bndstrg $BandSteeringDebug
	    ) & # send to background
	else
	    $LOG "For bandsteering work are required enable all bands support and identical SSID for 2.4GHz and 5GHz modules. Please change it and restart."
	fi
    fi
}

get_param() {
    eval `nvram_buf_get 2860 BandSteering BandSteeringDebug SSID1 SSID1INIC`
    if [ "$BandSteeringDebug" != "" ] && [ "$BandSteeringDebug" != "0" ]; then
	BandSteeringDebug="-d $BandSteeringDebug"
    fi
}

stop() {
    pid=`pidof bndstrg`
    if [ "$pid" != "" ]; then
	$LOG "Stopping bandsteering daemon"
	killall -q bndstrg
	killall -q -SIGKILL bndstrg
    fi
}

case "$1" in
        start)
            start
            ;;

        stop)
            stop
            ;;

        restart)
            stop
            start
            ;;

        *)
            echo $"Usage: $0 {start|stop|restart}"
esac
