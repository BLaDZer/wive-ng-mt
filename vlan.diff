+static void setWanPort(webs_t wp, char_t *path, char_t *query)
+{
+	int i;
+	char w_name[20];
+	char* w_port = websGetVar(wp, T("wan_port"), T("0"));
+	char* l_port = websGetVar(wp, T("lan_port"), T("near"));
