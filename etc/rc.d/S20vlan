#!/bin/sh

LOG="logger -t vlan"

# get params
. /etc/scripts/global.sh

start() {
    if [ "$VlanEnabled" = "1" ] && [ ! -f /tmp/bootgood ]; then
	if [ "$tv_port" = "1" ]; then
	    $LOG "Add bridge for TV/STB"
	    brctl addbr "$vlantvif"
	    vconfig add eth2 3
	    set_vlan_map eth2.3
	    ip link set eth2.3 up
	    brctl addif "$vlantvif" eth2.3
	    for vlannum in $tv_portVLAN; do
		$LOG "Add vlan $vlannum for TV/STB port input (WAN) $tv_portVLAN"
		vconfig add "$phys_wan_if" "$vlannum"
		set_vlan_map "$phys_wan_if.$vlannum"
		brctl addif "$vlantvif" "$phys_wan_if.$vlannum"
		ip link set "$phys_wan_if.$vlannum" up
	    done
	    if [ "$tv_port_mcast" = "1" ]; then
		# generate random ip from zeroconfig range end set need for igmpproxy work
		rndip="169.254.$(($RANDOM%253+1)).$(($RANDOM%253+1))"
		ip -4 addr flush dev "$vlantvif"
		ip -4 addr add "$rndip"/32 dev "$vlantvif"
	    fi
	    ip link set "$vlantvif" up
	fi
	if [ "$sip_port" = "1" ]; then
	    $LOG "Add bridge for SIP/STB"
	    brctl addbr "$vlansipif"
	    vconfig add eth2 4
	    ip link set eth2.4 up
	    brctl addif "$vlansipif" eth2.4
	    for vlannum in $sip_portVLAN; do
		$LOG "Add vlan $vlannum for TV/STB port input (WAN) $sip_portVLAN"
		vconfig add "$phys_wan_if" "$vlannum"
		set_vlan_map "$phys_wan_if.$vlannum"
		brctl addif "$vlansipif" "$phys_wan_if.$vlannum"
		ip link set "$phys_wan_if.$vlannum" up
	    done
	    if [ "$sip_port_mcast" = "1" ]; then
		# generate random ip from zeroconfig range end set need for igmpproxy work
		rndip="169.254.$(($RANDOM%253+1)).$(($RANDOM%253+1))"
		ip -4 addr flush dev "$vlansipif"
		ip -4 addr add "$rndip"/32 dev "$vlansipif"
	    fi
	    ip link set "$vlansipif" up
	fi
    fi
}

stop() {
    :
}

case "$1" in
	start)
	    start
	    ;;

	stop)
	    stop
	    ;;

	restart)
	    stop
	    start
	    ;;

	*)
	    echo $"Usage: $0 {start|stop|restart}"
	    exit 1
esac
