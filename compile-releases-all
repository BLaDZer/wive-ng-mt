#!/bin/sh

PWD=`pwd`

rm -rf $PWD/releases
mkdir -p $PWD/releases

DEVLIST="MT7620-2T2R-4M MT7620-2T2R-8M MT7620-2T2R-EXTPA-EXTLNA-MT7610-1T1R-5GHZ-8M MT7620-2T2R-MT7610-1T1R-5GHZ-8M"
DEVLISTUSB="MT7620-2T2R-EXTPA-EXTLNA-MT7610-1T1R-5GHZ-16M-USB MT7620-2T2R-MT7610-1T1R-5GHZ-16M-USB MT7621-MT7602-MT7612-2T2R-8M-USB"

./clear

for devname in $DEVLIST $DEVLISTUSB
do
    ./clear RELEASE
    nice -19 ./compile "$devname" $1 || exit 1
    cp -f $PWD/images/*.zip $PWD/releases
done
