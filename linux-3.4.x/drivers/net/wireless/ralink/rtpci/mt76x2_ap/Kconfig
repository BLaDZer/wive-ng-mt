config MT76X2_AP
	tristate "MediaTek MT7620/MT7602E/7612E 802.11n/ac AP Support"
	select WIRELESS_EXT
	select WEXT_SPY
	select WEXT_PRIV

config  MT76X2_AP_LED
	bool "LED support"
	depends on MT76X2_AP
	default y

config  MT76X2_AP_WSC
	bool "WSC (WiFi Simple Config)"
	depends on MT76X2_AP
	default n

config  MT76X2_AP_WSC_V2
	bool "WSC V2 (WiFi Simple Config Version 2)"
	depends on MT76X2_AP
	depends on MT76X2_AP_WSC
	default n

